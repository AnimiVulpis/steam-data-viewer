{
	"name": "SteamData",
	"description": "scraping and visualizing various steam data",
	"version": "0.1",
	"manifest_version": 2,
	"icons": {
		"128": "/img/logo-128.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
		"default_title": "extension to collect and show steam data",
		"default_icon": {
			"19": "/img/logo-19.png"
		},
		"default_popup": "/popup/popup.html"
	},
	"permissions": [
		"declarativeContent",
		"http://steamcommunity.com/"
	]
}
